@model List<SImaraMaharramli_Pasha.Domain.Entity.Question>
@if (Model!=null)
{
    

   
        <div style="width:100%;">
            <div >
                <button class="btn btn-primary mb-3" onclick="location.href='@Url.Action("Create", "Question", new { vacancyId = Model.Select(x=>x.VacancyId).FirstOrDefault() })'">
                    Add New Question
                </button>
               
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Question</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var question in Model)
                            {
                                <tr>
                                    <td>@question.Id</td>
                                    <td>@question.Text</td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@question.Id" class="badge badge-danger"><i class="fa-solid fa-trash"></i></a>
                                        <a asp-action="Update" asp-route-id="@question.Id" class="badge badge-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                    </td>
                                </tr>
                            }



                        </tbody>
                    </table>
                
               
            </div>
        </div
}
else
{
    <p>
        Not found questions
    </p>
}