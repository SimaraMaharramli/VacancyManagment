@model List<SImaraMaharramli_Pasha.Service.DTOS.Vacancy.GetAllVacancy>
@{
    int count = 1;
}
@if (Model!=null)
{
    <div class="main-panel">
        <div class="content-wrapper">
            <div class="row">
                <div class="col-lg-12 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div>
                                <h4 class="card-title">Category Table</h4>
                                <p class="card-description">

                                    <a asp-area="AdminArea" asp-controller="Vacancy" asp-action="Create" style="color:green;font-size:large"> +Add new vacancy </a>
                                </p>
                            </div>

                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Valid From</th>
                                            <th>Valid To</th>
                                            <th>Created Date</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.Name</td>
                                                <td>@item.ValidFrom.ToString("dd/MM/yyyy")</td>
                                                <td>@item.ValidTo.ToString("dd/MM/yyyy")</td>
                                                <td>@item.Created.ToLocalTime().ToString("dd/MM/yyyy")</td>
                                                @if (!item.IsActive)
                                                {
                                                    <td class="badge badge-info"><a asp-controller="Vacancy" asp-action="ChangeStatus" asp-route-vacancyId="@item.Id">Active</a></td>
                                                }
                                                else
                                                {
                                                    <td class="badge badge-danger"><a asp-controller="Vacancy" asp-action="ChangeStatus" asp-route-vacancyId="@item.Id">Deactive</a></td>
                                                }

                                                <td>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-danger"><i class="fa-solid fa-trash"></i></a>
                                                    <a asp-action="Update" asp-route-id="@item.Id" class="badge badge-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                                                </td>
                                            </tr>
                                            count++;
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
}
else
{
    <p>Job posting not found</p>
}
